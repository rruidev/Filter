( "#mytask-grid").on('mouseenter','.k-grid .commentSection .left-tab-icons .tab',function() {
	  $(this).find('.extraText').show();
	});

	$( "#mytask-grid").on('mouseleave','.k-grid .commentSection .left-tab-icons .tab',function() {
	  $(this).find('.extraText').hide();
	});
